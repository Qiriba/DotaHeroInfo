<Window x:Class="HeroDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hero Display" Height="600" Width="800">
    <DockPanel>
        <!-- Search Bar at the Top -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <TextBox Name="SearchBox" Width="200" VerticalAlignment="Center" Margin="5" 
                     TextChanged="SearchBox_TextChanged"/>
            <Button Name="OkButton" Content="OK" DockPanel.Dock="Top" Height="30" Click="OkButton_Click" Margin="5" />
        </StackPanel>

        <!-- Scrollable Hero Display -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel Name="HeroPanel" Margin="10" Background="LightGray">
                <!-- Hero Cards Added Dynamically -->
            </WrapPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
